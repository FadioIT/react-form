{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "declarationDir": "./types",
    "composite": true,
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2017"],
    "declaration": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "esModuleInterop": true,
    "jsx": "react"
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts"]
}
